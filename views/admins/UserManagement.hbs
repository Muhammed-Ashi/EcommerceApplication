<script>
    function BlockUser(UserId){
         
         $.ajax({
      url: "/admin/BlockUser",
      dataType: 'json',
      data: {
        UserId:UserId

      },
      method: 'post',
      success: (response) => {
          if (response.status==true){
            $('.'+UserId).html('blocked')
            $('#'+UserId).hide()
            
          }
       }
    })
    }
</script>